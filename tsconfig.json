{
	"compilerOptions": {
		/* Base Options: */
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"moduleDetection": "force",
		"isolatedModules": true,

		/* Strictness */
		"strict": true,
		// "noUncheckedIndexedAccess": true,
		"checkJs": true,
		"allowImportingTsExtensions": true,

		/* Bundled projects */
		"lib": ["dom", "dom.iterable", "ES2022"],
		"noEmit": true,
		"module": "Preserve",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"plugins": [{ "name": "next" }],
		"incremental": true,
		"tsBuildInfoFile": ".cache/tsbuildinfo.json"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"*.js",
		".next/types/**/*.ts",
		"globals.d.ts"
	],
	"exclude": ["node_modules"]
}
